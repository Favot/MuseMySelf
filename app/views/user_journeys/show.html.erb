<div class="container text-center mt-5">
  <div class="category">
    <span class="tag-topic theater"><%= @journey.topic.name %></span>
  </div>
  <div class="journey-name">
    <h1><%= @journey.name %></h1>
  </div>
  <div class="stats">
    <div class="subscribe"><%= @count_subscribers %>
    </div>
    <div class="rating"><%= @average_rating %>/5
    </div>
    <div class="duration"><%= @duration %>
    </div>
  </div>

  <div class="description">
    <p><%= @journey.summary %></p>
  </div>
  <section>
    <div class="content-journey">
        <% @content_count_by_type.each do |key, value| %>
          <%  unless value.zero?  %>
            <div class="card-content">
              <% if @subscribed %>
                <%= image_tag("#{key}-content.svg") %>
                <div class="counter">
                  <p><%= "#{@to_do_count_by_type[key]}/#{value}" %></p>
                </div>
                <% else %>
                <%= image_tag("#{key}-content.svg") %>
                <div class="counter">
                  <p><%= "#{value}" %></p>
                </div>
              <% end %>
            </div>
          <% end %>
        <% end %>
    </div>
  </section>

  </div>
</div>

<div class="container journey-show">
  <% position = 0 %>
  <% @contents.each do |content| %>
    <% position += 1 %>
    <div class="show-content">
      <div class="number <%= @tags[content.category] %>">
        <%= position  %>
      </div>
      <div class="icon-topic-<%= @tags[content.category] %>">
        <%= image_tag("#{@tags[content.category]}.svg") %>

      </div>
      <div class="bloc-content">
        <div class="tag-topic <%= @tags[content.category] %> mb-2"><%= content.category %></div>
        <div class="bloc-title">
          <p><%= "#{@contents_durations[content][:hours]} h #{@contents_durations[content][:minutes]} min" %></p>
          <p><%= content.title %></p>
          <p><%= "#{content.author}, #{content.date}" %></p>
        </div>
        <%= link_to "DÃ©couvrir", user_journey_content_path(id: @user_journey_contents_ids[content]) %>
      </div>
    </div>
  <% end %>
  <% if @user_journey.completed == false %>

  <div class="btn-search form-btn">
      <%= button_to "completed", complete_user_journey_path(@user_journey.id), method: :patch , class: "btn-search form-btn" %>
  </div>

  <% else %>

    <div>Vous avez deja complete se parcour</div>
  
  <% end %>
  
  
</div>
