<!-- Header -->
<%= render 'shared/quiz_header' %>

<!-- Message -->
<div class="quiz-question">
  <% if @correct_answers_count == @quiz_questions.size %>
    <h2>Félicitations tu as répondu correctement à toutes les questions&nbsp;!&nbsp;🎉</h2>
  <% elsif @correct_answers_count == 0 %>
    <h2>Dommage tu feras mieux au prochain quiz&nbsp;!</h2>
  <% elsif @correct_answers_count == 1 %>
    <h2>Une bonne réponse, tu es sur la bonne voie&nbsp;!&nbsp;🎉</h2>
  <% else %>
    <h2>Bravo tu as <%= @correct_answers_count %> bonnes réponses&nbsp;!&nbsp;🎉</h2>
  <% end %>
</div>

<!-- Feedback -->
<div class="feedback-container">
  <% @comparison.each do |element| %>
    <!-- Question -->
    <h4><%= element[:question] %></h4>
    <!-- Feedback -->
    <p class="<%= element[:correct] ? "correct" : "incorrect" %>"><%= element[:correction] %></p>
  <% end %>
  <!-- CTA btn -->
  <%= link_to "Revenir au contenu", user_journey_content_path(@user_journey_content), class: "btn-start", id: "backBtn"%>
</div>
