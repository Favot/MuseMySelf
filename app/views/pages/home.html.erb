<h1>Muse My Self</h1>

<!-- Search form -->
<%= form_for :search, url: journeys_path, method: :get do |f| %>
  <div class="form-container">
    <label class="form-label form-label-hidden" for="search[query]">Champ de recherche</label>
    <input class="form-input" type="text" name="search[query]" id="search_query" placeholder="Une idée ?"/>
    <%= f.submit "Rechercher", class: "btn-search form-btn" %>
  </div>
<% end %>


<!-- Caroussel tags -->
<div class="content-title">
  <h3>Explorer les parcours</h3>
</div>

<%= render 'shared/caroussel_tags', data: @topics %>


<% @topics.each do |topic| %>
	<div class="border-magic">
		#<%= link_to topic.name, journeys_path(topic_id: topic.id) %>
	</div>
<% end %>
<%= render 'components_christophe' %>

<h3>Nouveautés</h3>
<% @last_journeys.each do |journey| %>
	<div class="border-magic">
	 <%= link_to journey.name, journey_path(journey.id) %>

	</div>
<% end %>


<!-- Caroussel cards 1 -->
<div class="content-title">
  <h3>Nouveautés</h3>
</div>

<%= render 'shared/caroussel_cards', data: @last_journeys %>

<!-- Caroussel cards 2 -->
<div class="content-title">
  <h3>Notre séléction pour vous</h3>
</div>

<%= render 'shared/caroussel_cards', data: @random_journeys %>
