<h1>Muse My Self</h1>


<%= simple_form_for :search, url: journeys_path, method: :get do |f| %>
	<div class="search-form-control form-group">
		<input class="form-control string required" type="text" name="search[query]" id="search_query" />
		<button name="button" type="submit" class="btn">
		<i class="fas fa-search"></i> Search
	</button>
	</div>
<% end %>



<h2>Explorer les parcours</h2>
<% @topics.each do |topic| %>
	<div class="border-magic">
		#<%= topic.name %>
	</div>
<% end %>

<h2>Nouveautés</h2>
<% @last_journeys.each do |journey| %>
	<div class="border-magic">
		<%= journey.name %>
	</div>
<% end %>

<h2>Notre séléction pour vous</h2>	
<%  @random_journeys.each do |journey| %>
	<div class="border-magic">
		<%= journey.name %>
	</div>
<% end %>
